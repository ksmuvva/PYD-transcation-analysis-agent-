# ==============================================================================
# LLM Provider API Keys
# ==============================================================================
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ==============================================================================
# Agent Configuration (Optional - can override via CLI)
# ==============================================================================
DEFAULT_LLM_PROVIDER=openai
DEFAULT_MODEL=o1-mini
DEFAULT_THRESHOLD=250.0
DEFAULT_CURRENCY=GBP

# ==============================================================================
# MCTS Configuration - Tool-Specific Settings (REQ-001 to REQ-005)
# ==============================================================================

# Tool 1: Filter Transactions (conversion sub-routine)
# REQ-002: Max depth = 30 nodes, REQ-005: Iterations = 100
MCTS_FILTER_MAX_DEPTH=30
MCTS_FILTER_ITERATIONS=100
MCTS_FILTER_REWARD_SCALE=1.0
MCTS_FILTER_EXPLORATION_CONSTANT=1.414

# Tool 2: Classify Transactions
# REQ-002: Max depth = 50 nodes, REQ-005: Iterations = 500
MCTS_CLASSIFICATION_MAX_DEPTH=50
MCTS_CLASSIFICATION_ITERATIONS=500
MCTS_CLASSIFICATION_REWARD_SCALE=1.0
MCTS_CLASSIFICATION_EXPLORATION_CONSTANT=1.414

# Tool 3: Detect Fraudulent Transactions
# REQ-002: Max depth = 75 nodes, REQ-005: Iterations = 1000
MCTS_FRAUD_MAX_DEPTH=75
MCTS_FRAUD_ITERATIONS=1000
MCTS_FRAUD_REWARD_SCALE=1.0
MCTS_FRAUD_EXPLORATION_CONSTANT=1.414

# Tool 4: Generate Enhanced CSV (explanation logic)
# REQ-002: Max depth = 20 nodes, REQ-005: Iterations = 200
MCTS_EXPLANATION_MAX_DEPTH=20
MCTS_EXPLANATION_ITERATIONS=200
MCTS_EXPLANATION_REWARD_SCALE=1.0
MCTS_EXPLANATION_EXPLORATION_CONSTANT=1.414

# Early Termination Settings (REQ-005)
MCTS_EARLY_TERMINATION_ENABLED=true
MCTS_CONVERGENCE_STD_THRESHOLD=0.01
MCTS_CONVERGENCE_WINDOW=50

# Simulation Policy Settings (REQ-003)
MCTS_SIMULATION_TIMEOUT_MS=10

# Legacy compatibility
MCTS_EXPLORATION_CONSTANT=1.414
MCTS_MAX_DEPTH=5
MCTS_SIMULATION_BUDGET=10

# ==============================================================================
# Pydantic Logfire Telemetry Configuration (REQ-016 to REQ-027)
# ==============================================================================

# REQ-018: Basic Configuration
LOGFIRE_ENABLED=true
LOGFIRE_PROJECT_NAME=financial-fraud-agent-mcts
LOGFIRE_SERVICE_NAME=transaction-analyzer

# REQ-018: API Token (Optional - omit for local-only POC)
# Obtain from: https://logfire.pydantic.dev
# LOGFIRE_TOKEN=your-logfire-token-here

# REQ-018: PII Redaction
# Set to 'false' during development, 'true' in production
LOGFIRE_SCRUBBING=false

# REQ-017: Real-Time IDE Trace Visualization
LOGFIRE_PYDANTIC_PLUGIN=true
LOGFIRE_MCTS_TELEMETRY=true
LOGFIRE_CONSOLE=true
LOGFIRE_SEND_TO_LOGFIRE=true

# REQ-021: Persistent Trace Storage (90-day minimum retention)
# Option 1: SQLite (default: ~/.logfire/logfire.db)
# No configuration needed - uses default path

# Option 2: PostgreSQL (recommended for production)
# LOGFIRE_POSTGRES_DSN=postgresql://user:password@localhost:5432/logfire

# REQ-022: GitHub Integration for Experiment Tracking
# Automatically tags traces with git commit SHA, branch, and repository URL
LOGFIRE_GITHUB_INTEGRATION=true

# REQ-020: Error and Convergence Logging
# Alert if convergence failure rate exceeds 5% over 1-hour window
LOGFIRE_CONVERGENCE_ERROR_ALERT_THRESHOLD=0.05
LOGFIRE_CONVERGENCE_ALERT_WINDOW_HOURS=1

# REQ-023, REQ-024: Testing Support
# Enable test mode to prevent network calls and use in-memory traces
LOGFIRE_TEST_MODE=false

# REQ-024: Deterministic Testing Mode
# Set a fixed random seed for reproducible MCTS results in tests
# LOGFIRE_DETERMINISTIC_SEED=42
